 <div id="clock"></div>
            <script>
                var clock = document.getElementById('clock');
                function updateClock(){
                    var now = new Date();
                    var hours = now.getHours();
                    var minutes = now.getMinutes();
                    var seconds = now.getSeconds();
                    hours = (hours < 10? "0": "") + hours ;
                    minutes = (minutes < 10? "0": "") + minutes;
                    seconds = (seconds < 10? "0": "") + seconds;
                    clock.innerHTML = hours + ":" + minutes + ":" + seconds
                }
                updateClock();
                setInterval(updateClock,1000)
            </script>


 <script>
                document.getElementsByClassName("box3").addEvenListener("submit",function(search){
                    search.preventDefault();
                    var getKeywords = document.getElementById("searchContent").value;
                    performSearch(getKeywords)
                })
                function performSearch(getKeywords){
                    console.log("执行搜索:" + getKeywords)
                }
            </script>